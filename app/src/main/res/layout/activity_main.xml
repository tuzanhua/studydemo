<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_handler_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handler Test" />

        <Button
            android:id="@+id/btn_start_leak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="start_makeleak" />

        <Button
            android:id="@+id/btn_flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="start_flowlayout" />

        <Button
            android:id="@+id/btn_view_touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="viewtouch" />

        <Button
            android:id="@+id/btn_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bitmappool" />

    </LinearLayout>

</ScrollView>