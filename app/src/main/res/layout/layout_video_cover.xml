<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_close_audio"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="hello"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_video_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@+id/ll_close_audio"
        app:layout_constraintTop_toTopOf="@+id/ll_close_audio" />

    <TextView
        android:id="@+id/tv_video_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="安静电话费卡的很愤慨"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_video_cover"
        app:layout_constraintTop_toTopOf="@+id/ll_close_audio" />

</androidx.constraintlayout.widget.ConstraintLayout>